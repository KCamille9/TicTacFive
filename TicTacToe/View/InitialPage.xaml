    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="700" Height="700">


    <Frame>
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="700" Height="700">
            <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="10,0,-10,0">
                <TextBlock HorizontalAlignment="Left" Margin="181,95,0,0" TextWrapping="Wrap" Text="TicTacFive!" VerticalAlignment="Top" Height="152" Width="394" FontSize="72"/>
                <Button Content="1 Player" HorizontalAlignment="Left" Margin="117,289,0,0" VerticalAlignment="Top" Height="65" Width="458" FontSize="30"/>
                <Button x:Name="TwoPalyersButton" Content="2 Players" HorizontalAlignment="Left" Margin="117,412,0,0" VerticalAlignment="Top" Height="65" Width="458" FontSize="30"/>
                <Button Content="0 Players" HorizontalAlignment="Left" Margin="117,523,0,0" VerticalAlignment="Top" Height="65" Width="458" FontSize="30"/>
            </Grid>
        </Grid>
    </Frame>
</Page>
